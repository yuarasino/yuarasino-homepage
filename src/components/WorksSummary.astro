---
import { Image } from "astro:assets"
import type { CollectionEntry } from "astro:content"

interface Props {
  entry: CollectionEntry<"works">
}

const { entry } = Astro.props
const { slug, data } = entry
const { title, image } = data
---

<article>
  <a href=`/works/${slug}#main` class="group">
    <div class="flex flex-col">
      <div class="border">
        <Image src={image} alt="" class="h-auto w-full" />
      </div>
      <h3 class="mt-2 transition-colors group-hover:text-accent-500">
        <span class="leading-none">{title}</span>
      </h3>
    </div>
  </a>
</article>
