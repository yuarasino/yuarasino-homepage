---
import { Image } from "astro:assets"
import { getDataEntryById } from "astro:content"

const profile = await getDataEntryById("profile", "asv")
const { data } = profile
---

<section id="profile" class="@container bg-white">
  <div class="mx-auto max-w-screen-clamp px-4 py-32">
    <div>
      <p class="text-xl tracking-wide text-primary-500 before:content-['-_']">
        Profile
      </p>
      <h2 class="text-3xl">プロフィール</h2>
    </div>
    <div class="mt-16 px-4">
      <div>
        <p class="text-4xl">{data.name}</p>
        <p class="text-xl tracking-wide text-secondary-500">{data.spelling}</p>
        <p class="mt-2 text-xl">{data.position}</p>
      </div>
      <section class="mt-8">
        <div>
          <h3
            class="text-xl tracking-wide text-primary-500 before:content-['-_']"
          >
            Info
          </h3>
        </div>
        <div class="mt-4 px-4">
          <ul class="flex flex-col gap-y-1">
            <li>
              <span class="inline-block w-[6em]">誕生日</span> - {data.birthday}
            </li>
            <li>
              <span class="inline-block w-[6em]">ファンアート</span> - {
                data.funart
              }
            </li>
            <li>
              <span class="inline-block w-[6em]">推しマーク</span> - {
                data.funmark
              }
            </li>
          </ul>
        </div>
      </section>
      <section class="mt-8">
        <div>
          <h3
            class="text-xl tracking-wide text-primary-500 before:content-['-_']"
          >
            History
          </h3>
        </div>
        <div class="mt-4 px-4">
          <ul class="flex flex-col gap-y-1">
            {data.histories.map((history) => <li>{history}</li>)}
          </ul>
        </div>
      </section>
      <section class="mt-8">
        <div>
          <h3
            class="text-xl tracking-wide text-primary-500 before:content-['-_']"
          >
            Image
          </h3>
        </div>
        <div class="mt-4 flex justify-center gap-8 px-4">
          <div>
            <Image
              src={data.avatar}
              alt="新篠ゆうの立ち絵"
              class="h-auto w-48"
            />
          </div>
          <div>
            <ul class="flex h-full flex-col justify-end gap-4 py-4">
              {
                data.diffs.map((diff, i) => (
                  <li>
                    <Image
                      src={diff}
                      alt={`新篠ゆうの立ち絵差分${i}`}
                      class="h-auto w-24"
                    />
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </section>
    </div>
  </div>
</section>
